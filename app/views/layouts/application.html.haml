!!!
%html

  %head
    %title
      = yield(:title) || "Fork & Pull"
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    = stylesheet_link_tag :application
    = javascript_include_tag :application
    = csrf_meta_tag
    = yield(:head)

  %body{:class => "application #{'devise' if devise_controller?} #{params[:controller]} #{params[:action]}"}
    .header
      .container
        %h1 Fork & Pull
        .logo

    .navigation
      .container
        %ul
          %li CSS
          %li JavaScript
          %li iOS
          %li Rails
          %li Tools

    .main
      .container
        = yield

    .footer
      .container
        %h3 About
